@page
@model LoginModel

@{
    ViewData["Title"] = "";
}

<div dir="rtl" class="text-right mx-auto row" style=" border: 1px solid #d8d3d3; border-radius: 5px; margin-top: 10%;padding:30px;width:40%,min-width:300px;">
    
        
            <form id="account" method="post" class="w-100">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email">ایمیل</label>
                    <input asp-for="Input.Email" class="form-control text-left" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password">رمز عبور</label>
                    <input asp-for="Input.Password" class="form-control text-left" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-block btn-primary">ورود</button>
                </div>
                <div class="form-group">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">آیا رمز عبور را فراموش کرده اید؟</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">ثبت نام به عنوان کاربر جدید</a>
                    </p>
                   
                </div>
            </form>
        
    
   
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
