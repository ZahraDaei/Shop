@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "";
}


<div dir="rtl" class="text-right mx-auto row" style=" border: 1px solid #d8d3d3; border-radius: 5px; margin-top: 10%;padding:30px;width:40%">
    <p>لطفا ایمیل خود را وارد نمایید.</p>
    <form method="post" class="w-100">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email">ایمیل:</label>
            <input asp-for="Input.Email" class="form-control text-left" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-block btn-primary">ثبت</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
