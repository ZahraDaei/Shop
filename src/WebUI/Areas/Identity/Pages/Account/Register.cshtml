@page
@model RegisterModel
@{
    ViewData["Title"] = "";
}


<div dir="rtl" class="text-right mx-auto row" style=" border: 1px solid #d8d3d3; border-radius: 5px; margin-top: 10%;padding:30px;width:40%">

    <form asp-route-returnUrl="@Model.ReturnUrl" method="post"  class="w-100">
        <h4>ایجاد حساب کاربری</h4>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Input.Email"></label>
            <input asp-for="Input.Email" class="form-control text-left" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control text-left" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.ConfirmPassword"></label>
            <input asp-for="Input.ConfirmPassword" class="form-control text-left" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-block btn-primary">ثبت نام</button>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
